[Unit]
Description=Firedancer
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=5
User={{ sdo_user }}
LogRateLimitIntervalSec=0
ExecStartPre=sudo /home/{{ sdo_user }}/firedancer/build/native/gcc/bin/fdctl configure init all --config /home/{{ sdo_user }}/fd-config.toml
ExecStart=sudo /home/{{ sdo_user }}/firedancer/build/native/gcc/bin/fdctl run --config /home/{{ sdo_user }}/fd-config.toml
TimeoutSec=infinity

[Install]
WantedBy=multi-user.target